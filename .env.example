# CollegeAdvisor-data Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# College Scorecard API Key (Get from https://api.data.gov/signup/)
COLLEGE_SCORECARD_API_KEY=DEMO_KEY

# IPEDS API Key (if available)
IPEDS_API_KEY=

# Social Media API Keys
TWITTER_BEARER_TOKEN=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
YOUTUBE_API_KEY=

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================

# ChromaDB Host and Port
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=college_advisor

# ChromaDB Cloud (if using cloud instance)
CHROMA_CLOUD_HOST=
CHROMA_CLOUD_API_KEY=

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Embedding Model and Provider
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_PROVIDER=sentence_transformers

# Ollama Configuration (if using Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# DATA DIRECTORIES
# =============================================================================

# Data Storage Paths
DATA_DIR=./data
PROCESSED_DIR=./data/processed
CACHE_DIR=./cache

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Text Processing
CHUNK_SIZE=800
CHUNK_OVERLAP=100
BATCH_SIZE=100

# Data Quality Thresholds
MIN_CONTENT_LENGTH=50
MAX_CONTENT_LENGTH=50000
QUALITY_THRESHOLD=0.7

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# API Rate Limiting (be respectful!)
DEFAULT_REQUESTS_PER_SECOND=1.0
DEFAULT_REQUESTS_PER_MINUTE=60
DEFAULT_REQUESTS_PER_HOUR=1000

# Web Scraping Configuration
USER_AGENT=CollegeAdvisor-Bot/1.0
SCRAPING_DELAY=1.0
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================

# Pipeline Features
ENABLE_REAL_TIME_PROCESSING=false
ENABLE_DATA_VALIDATION=true
ENABLE_SYNTHETIC_DATA=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log
