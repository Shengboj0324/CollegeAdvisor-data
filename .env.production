# CollegeAdvisor Production Environment Configuration

# Environment
ENVIRONMENT=production

# Service Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
API_HOST=0.0.0.0
API_PORT=8080

# Security Configuration
API_SECRET_KEY=your-production-secret-key-change-this
JWT_SECRET=your-jwt-secret-change-this
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database Configuration
CHROMA_COLLECTION_NAME=college_advisor
CHROMA_PERSIST_DIRECTORY=/app/chroma_data

# Ollama Configuration
OLLAMA_MODEL=llama3:latest
OLLAMA_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
API_WORKERS=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9000

# Cache Configuration (if using Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
