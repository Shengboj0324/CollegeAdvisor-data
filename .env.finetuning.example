# CollegeAdvisor Fine-Tuning Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# ChromaDB Configuration
# ============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=college_advisor

# ChromaDB Cloud (Optional - for production)
# CHROMA_CLOUD_HOST=your-instance.trychroma.com
# CHROMA_CLOUD_API_KEY=your_api_key_here

# ============================================================================
# Embedding Configuration
# ============================================================================
# Locked to sentence-transformers for consistency
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_PROVIDER=sentence_transformers

# ============================================================================
# Ollama Configuration
# ============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Model for fine-tuning (base model)
OLLAMA_BASE_MODEL=llama3

# ============================================================================
# Cloudflare R2 Storage Configuration
# ============================================================================
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here
R2_BUCKET_NAME=collegeadvisor-data

# ============================================================================
# Data Collection API Keys
# ============================================================================
# College Scorecard API (Get from: https://api.data.gov/signup/)
COLLEGE_SCORECARD_API_KEY=DEMO_KEY

# IPEDS API (Optional - Urban Institute Education Data Portal)
# IPEDS_API_KEY=your_ipeds_key_here

# Social Media APIs (Optional)
# TWITTER_BEARER_TOKEN=your_twitter_token
# REDDIT_CLIENT_ID=your_reddit_client_id
# REDDIT_CLIENT_SECRET=your_reddit_client_secret
# YOUTUBE_API_KEY=your_youtube_key

# ============================================================================
# Data Processing Configuration
# ============================================================================
DATA_DIR=./data
PROCESSED_DIR=./data/processed
CACHE_DIR=./cache

CHUNK_SIZE=800
CHUNK_OVERLAP=100
BATCH_SIZE=100

# ============================================================================
# Data Quality Configuration
# ============================================================================
MIN_CONTENT_LENGTH=50
MAX_CONTENT_LENGTH=50000
QUALITY_THRESHOLD=0.7

# ============================================================================
# Pipeline Configuration
# ============================================================================
ENABLE_REAL_TIME_PROCESSING=false
ENABLE_DATA_VALIDATION=true
ENABLE_SYNTHETIC_DATA=false

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
DEFAULT_REQUESTS_PER_SECOND=1.0
DEFAULT_REQUESTS_PER_MINUTE=60
DEFAULT_REQUESTS_PER_HOUR=1000

# ============================================================================
# Web Scraping Configuration
# ============================================================================
USER_AGENT=CollegeAdvisor-Bot/1.0
SCRAPING_DELAY=1.0
MAX_CONCURRENT_REQUESTS=10

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log

# ============================================================================
# Fine-Tuning Specific Configuration
# ============================================================================
# Training data output directory
FINETUNING_OUTPUT_DIR=./data/finetuning_prep

# Number of Q&A pairs to generate per institution
QA_PAIRS_PER_INSTITUTION=5

# Training dataset formats to generate
GENERATE_ALPACA_FORMAT=true
GENERATE_JSONL_FORMAT=true
GENERATE_OLLAMA_FORMAT=true

# Model parameters for fine-tuning
FINETUNING_TEMPERATURE=0.7
FINETUNING_TOP_P=0.9
FINETUNING_TOP_K=40
FINETUNING_NUM_CTX=4096

# ============================================================================
# Production Configuration
# ============================================================================
# Set to 'production' when deploying
ENVIRONMENT=development

# Enable production features
ENABLE_MONITORING=false
ENABLE_ALERTING=false
ENABLE_BACKUP=false

